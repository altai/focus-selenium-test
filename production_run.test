case "$TESTS" in
    full)
    bunch --output-plugin="checklist_layout" --plugin-params="dst_dir=$WEBREPORTS" full/01-init $REPORTS
    if [ $? -eq 0 ]; then
        let SUCCESS=SUCCESS+1
