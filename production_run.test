                let FAILURE=FAILURE+1
                retcode=1
            fi
        done
    else
        let FAILURE=FAILURE+1
        retcode=1
    fi
    bunch --output-plugin="checklist_layout" --plugin-params="dst_dir=$WEBREPORTS" full/05-clear $REPORTS
